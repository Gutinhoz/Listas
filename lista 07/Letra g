#include <stdio.h>

int main(void) {
  int num, cont = 1;
  float total = 0, numerador = 1, divisor = 1;
  printf("\n - Digite um numero maior que 3:\n -> ");
  scanf("%i", &num);
  if (num > 3) {
    do {
      if (cont == 1) {
        printf("\n  -> %.0f/%.0f -", numerador, divisor);
        total += (numerador / divisor);
      }
      if (cont % 2 == 1 && cont != 1) {
        printf(" + %.0f/%.0f", numerador, divisor);
        total += (numerador / divisor);
      }
      if (cont == 2) {
        printf(" %.0f/%.0f", numerador, divisor);
        total -= (numerador / divisor);
      }
      if (cont % 2 == 0 && cont != 2) {
        printf(" - %.0f/%.0f", numerador, divisor);
        total -= (numerador / divisor);
      }
      numerador += 2;
      divisor++;
      cont++;
    } while (cont <= num);
    printf("\n\n  -> Total da expressÃ£o = %.4f", total);
  } else {
    printf("\n -> Valor invalido:");
  }
  return 0;
}
